{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NEXT_PUBLIC_FRONTEND_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "GITHUB_ID",
    "GITHUB_SECRET",
    "JWT_SECRET",
    "NEXT_PUBLIC_FB_APP_ID",
    "DATABASE_URL"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "install": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:reset": {
      "cache": false
    }
  }
}
